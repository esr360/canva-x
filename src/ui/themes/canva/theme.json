{
    "theme": {
        "colors": {
            "brand": {
                "brand-1": "#01c4cf",
                "brand-2": "#7d29e8"
            }
        },
        "header": {
            "background": {
                "gradient": {
                    "direction": "135deg",
                    "colors": ["brand-1",  "brand-2"]
                }
            }
        },
        "button": {
            "modifier(primary)": {
                "background": "white",
                "color": ["#COLOR", "greyscale", "grey-5"],
                "hover": {
                    "background": "darken(white, 5%)"
                }
            },
            "modifier(tertiary)": {
                "background": "rgba(black, 0.4)",
                "color": "rgba(white, 0.8)",
                "hover": {
                    "background": "rgba(black, 0.6)",
                    "color": "white"
                }
            }
        }
    }
}